<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Movie</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#0d0d0d] text-white font-sans">

  <!-- Header -->
  <%- include("header") %>

  <!-- Form Container -->
  <div class="flex justify-center items-center min-h-screen px-4">
    <form 
      action="/updateMovieData" 
      method="post" 
      enctype="multipart/form-data" 
      class="bg-[#1a1a1a] border border-gray-800 rounded-2xl p-8 w-full max-w-xl shadow-2xl"
    >
      <h2 class="text-3xl font-bold mb-6 text-center text-yellow-400 tracking-wide">ðŸŽ¬ Edit Movie</h2>

      <!-- Hidden ID -->
      <input type="hidden" name="id" value="<%= data.id %>" />

      <!-- Movie Poster Preview -->
      <div class="mb-5">
        <label class="block text-sm text-gray-400 mb-1">Current Poster</label>
        <img src="/<%= data.image %>" alt="Movie Poster" class="w-32 h-48 rounded-md border border-gray-600 object-cover" />
      </div>

      <!-- Upload New Poster -->
      <div class="mb-6">
        <label for="image" class="block text-sm text-gray-400 mb-1">Upload New Poster</label>
        <input 
          type="file" 
          name="image" 
          id="image"
          class="block w-full text-sm text-gray-300 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-yellow-600 file:text-black hover:file:bg-yellow-700 transition"
        />
      </div>

      <!-- Movie Name -->
      <div class="mb-4">
        <label for="name" class="block text-sm text-gray-400 mb-1">Movie Name</label>
        <input 
          type="text" 
          id="name"
          name="name" 
          value="<%= data.name %>" 
          placeholder="Enter movie name" 
          class="w-full px-4 py-2 rounded-md bg-[#262626] border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          required
        />
      </div>

      <!-- Category -->
      <div class="mb-4">
        <label for="category" class="block text-sm text-gray-400 mb-1">Category</label>
        <input 
          type="text" 
          id="category"
          name="catagory" 
          value="<%= data.catagory %>" 
          placeholder="Enter category (e.g. Action, Drama)" 
          class="w-full px-4 py-2 rounded-md bg-[#262626] border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          required
        />
      </div>

      <!-- Rating -->
      <div class="mb-6">
        <label for="rate" class="block text-sm text-gray-400 mb-1">Rating (out of 10)</label>
        <input 
          type="number" 
          id="rate"
          name="rate" 
          value="<%= data.rate %>" 
          placeholder="e.g. 8.5" 
          min="0" 
          max="10"
          step="0.1"
          class="w-full px-4 py-2 rounded-md bg-[#262626] border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          required
        />
      </div>

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="w-full bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 rounded-md transition duration-300"
      >
        Update Movie
      </button>
    </form>
  </div>

</body>
</html>
